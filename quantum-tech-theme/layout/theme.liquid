<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>{{ page_title | escape }}</title>
    {{ 'theme.css' | asset_url | stylesheet_tag }}
    {{ content_for_header }}
  </head>
  <body>
    <header class="qt-header">
      <a class="qt-logo" href="{{ routes.root_url }}">
        {% if settings.logo != blank %}
          <img src="{{ settings.logo | image_url: width: 240 }}" alt="{{ shop.name }} logo" loading="eager">
        {% else %}
          {{ shop.name }}
        {% endif %}
      </a>
      <nav class="qt-nav">
        <a href="{{ routes.all_products_collection_url }}">Products</a>
        <a href="/collections/all">Shop All</a>
        <a href="{{ routes.cart_url }}">Cart ({{ cart.item_count }})</a>
      </nav>
    </header>
    <main class="qt-main" role="main">
      {{ content_for_layout }}
    </main>
    <footer class="qt-footer">
      <div class="qt-container">
        <p>&copy; {{ 'now' | date: "%Y" }} {{ shop.name }}. All rights reserved.</p>
      </div>
    </footer>
  </body>
</html>