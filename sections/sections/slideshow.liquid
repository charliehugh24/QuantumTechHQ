<section class="qt-sld">
  <div class="qt-sld-track">
    {% for block in section.blocks %}
      <div class="qt-sld-slide" style="--bg:url('{{ block.settings.image | image_url: width: 2400 }}')">
        <div class="qt-sld-overlay">
          <div class="qt-sld-content">
            {% if block.settings.kicker != blank %}
              <span class="qt-kicker">{{ block.settings.kicker }}</span>
            {% endif %}
            <h2 class="qt-sld-title">{{ block.settings.heading }}</h2>
            <p class="qt-sld-sub">{{ block.settings.subheading }}</p>
            <div class="qt-sld-cta">
              {% if block.settings.primary_label != blank and block.settings.primary_link != blank %}
                <a class="qt-cta" href="{{ block.settings.primary_link }}">{{ block.settings.primary_label }}</a>
              {% endif %}
              {% if block.settings.secondary_label != blank and block.settings.secondary_link != blank %}
                <a class="qt-link" href="{{ block.settings.secondary_link }}">{{ block.settings.secondary_label }} →</a>
              {% endif %}
            </div>
          </div>
        </div>
      </div>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Slideshow hero",
  "blocks": [
    {
      "type": "slide",
      "name": "Slide",
      "settings": [
        { "type": "image_picker", "id": "image", "label": "Background image" },
        { "type": "text", "id": "kicker", "label": "Kicker", "default": "Free delivery over $100" },
        { "type": "text", "id": "heading", "label": "Heading", "default": "Keep up with technology" },
        { "type": "textarea", "id": "subheading", "label": "Subheading", "default": "The most advanced technologies are here—add bright colors to your life." },
        { "type": "text", "id": "primary_label", "label": "Primary button label", "default": "Buy it now" },
        { "type": "url",  "id": "primary_link",  "label": "Primary button link" },
        { "type": "text", "id": "secondary_label", "label": "Secondary link label", "default": "Select it" },
        { "type": "url",  "id": "secondary_link",  "label": "Secondary link" }
      ]
    }
  ],
  "max_blocks": 5,
  "presets": [{ "name": "Slideshow hero", "blocks": [{ "type": "slide" }] }]
}
{% endschema %}
