<section class="qt-caticons qt-container">
  <div class="qt-cat-grid">
    {% for block in section.blocks %}
      <a class="qt-cat" href="{{ block.settings.link | default: routes.all_products_collection_url }}">
        {% if block.settings.image %}
          <img src="{{ block.settings.image | image_url: width: 420 }}" alt="{{ block.settings.label | escape }}">
        {% else %}
          <div class="qt-cat-ph"></div>
        {% endif %}
        <span>{{ block.settings.label }}</span>
      </a>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Category icons row",
  "settings": [],
  "blocks": [
    {
      "type": "item",
      "name": "Category",
      "settings": [
        { "type": "image_picker", "id": "image", "label": "Icon / photo" },
        { "type": "text", "id": "label", "label": "Label", "default": "Tablets" },
        { "type": "url", "id": "link", "label": "Link" }
      ]
    }
  ],
  "max_blocks": 10,
  "presets": [{ "name": "Category icons row", "blocks": [{ "type": "item" }, { "type": "item" }, { "type": "item" }, { "type": "item" }, { "type": "item" }] }]
}
{% endschema %}
