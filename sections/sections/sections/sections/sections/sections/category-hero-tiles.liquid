<section class="qt-hero-tiles qt-container">
  <div class="qt-tiles">
    {% for block in section.blocks %}
      <a class="qt-tile" href="{{ block.settings.link | default: routes.all_products_collection_url }}">
        <img src="{{ block.settings.image | image_url: width: 1600 }}" alt="{{ block.settings.title | escape }}">
        <span class="qt-tile-title">{{ block.settings.title }}</span>
      </a>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Category hero tiles",
  "blocks": [
    {
      "type": "tile",
      "name": "Tile",
      "settings": [
        { "type": "image_picker", "id": "image", "label": "Background image" },
        { "type": "text", "id": "title", "label": "Title", "default": "Laptops" },
        { "type": "url", "id": "link", "label": "Link" }
      ]
    }
  ],
  "max_blocks": 4,
  "presets": [{ "name": "Category hero tiles", "blocks": [{ "type": "tile" }, { "type": "tile" }, { "type": "tile" }, { "type": "tile" }] }]
}
{% endschema %}
