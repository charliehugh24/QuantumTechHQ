<section class="qt-container">
  <div class="qt-promo-grid">
    {% for block in section.blocks %}
      <a class="qt-promo" href="{{ block.settings.link | default: '#' }}">
        <div class="qt-promo-inner">
          <div class="qt-promo-img">
            {% if block.settings.image %}
              <img src="{{ block.settings.image | image_url: width: 1200 }}" alt="{{ block.settings.heading | escape }}">
            {% endif %}
          </div>
          <div class="qt-promo-copy">
            <h3>{{ block.settings.heading }}</h3>
            {% if block.settings.cta_label != blank %}
              <span class="qt-chip">{{ block.settings.cta_label }}</span>
            {% endif %}
          </div>
        </div>
      </a>
    {% endfor %}
  </div>
</section>

{% schema %}
{
  "name": "Promo tiles",
  "blocks": [
    {
      "type": "tile",
      "name": "Tile",
      "settings": [
        { "type": "image_picker", "id": "image", "label": "Image" },
        { "type": "text", "id": "heading", "label": "Heading", "default": "Up to 50% off" },
        { "type": "text", "id": "cta_label", "label": "Button label", "default": "Shop Now" },
        { "type": "url", "id": "link", "label": "Link" }
      ]
    }
  ],
  "max_blocks": 4,
  "presets": [{ "name": "Promo tiles", "blocks": [{ "type": "tile" }, { "type": "tile" }] }]
}
{% endschema %}
