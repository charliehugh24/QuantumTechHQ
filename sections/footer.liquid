<div class="qt-container">
  <div style="display:grid;grid-template-columns:repeat(auto-fit,minmax(220px,1fr));gap:16px;">
    <div>
      <h4>{{ shop.name }}</h4>
      <p style="color:var(--muted)">Quality tech gear, fast shipping.</p>
    </div>
    <div>
      <h5>Links</h5>
      <ul style="list-style:none;padding:0;margin:0">
        <li><a href="/collections/all">Shop all</a></li>
        <li><a href="/policies/shipping-policy">Shipping</a></li>
        <li><a href="/policies/refund-policy">Returns</a></li>
        <li><a href="/contact">Contact</a></li>
      </ul>
    </div>
    <div>
      <h5>Newsletter</h5>
      {% form 'customer', id: 'ContactFooter' %}
        <input type="hidden" name="contact[tags]" value="newsletter">
        <input type="email" name="contact[email]" placeholder="Email address" required style="padding:.6rem;border:1px solid #dfe3ea;border-radius:10px;width:100%;">
        <button type="submit" class="qt-btn" style="margin-top:.5rem;">Subscribe</button>
      {% endform %}
    </div>
  </div>
</div>

{% schema %}
{ "name": "Footer", "settings": [], "presets": [{ "name": "Footer" }] }
{% endschema %}