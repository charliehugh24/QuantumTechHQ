<section class="qt-hero">
  <div class="qt-hero-inner qt-container">
    <div class="qt-hero-card">
      <h1 style="margin:0 0 .25rem 0">{{ settings.hero_heading }}</h1>
      <p style="margin:0 0 .5rem 0; color: var(--muted)">{{ settings.hero_subheading }}</p>
      {% if settings.hero_cta_link != blank %}
        <a class="qt-cta" href="{{ settings.hero_cta_link }}">{{ settings.hero_cta_label }}</a>
      {% endif %}
    </div>
    <div class="qt-hero-card" style="text-align:center;">
      <svg viewBox="0 0 240 160" width="100%" height="100%" role="img" aria-label="Tech hero art">
        <rect x="0" y="0" width="240" height="160" rx="16" fill="#e9eefc"></rect>
        <rect x="24" y="24" width="192" height="20" rx="6" fill="#cfd9fb"></rect>
        <rect x="24" y="56" width="144" height="12" rx="6" fill="#dfe6fd"></rect>
        <rect x="24" y="76" width="120" height="12" rx="6" fill="#dfe6fd"></rect>
        <rect x="24" y="106" width="192" height="30" rx="8" fill="#cfd9fb"></rect>
      </svg>
    </div>
  </div>
</section>

{% schema %}
{ "name": "Hero", "settings": [], "blocks": [], "presets": [{ "name": "Hero" }] }
{% endschema %}